{
  "appId": "com.contextmanager.dashboard",
  "productName": "Context Manager Dashboard",
  "directories": {
    "output": "dist-electron",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "dist",
      "to": "dist",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": "nsis"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Context Manager Dashboard"
  }
}
