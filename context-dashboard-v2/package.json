{
    "name": "context-dashboard-v2",
    "private": true,
    "type": "module",
    "main": "electron/main.cjs",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "lint": "eslint .",
        "preview": "vite preview",
        "electron": "electron .",
        "electron-dev": "cross-env NODE_ENV=development electron .",
        "dev-all": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron-dev\"",
        "build-app": "vite build",
        "dist": "npm run build-app && electron-builder",
        "dist-win": "npm run build-app && electron-builder --win"
    },
    "dependencies": {
        "@emotion/react": "^11.11.1",
        "@emotion/styled": "^11.11.0",
        "@monaco-editor/react": "^4.6.0",
        "@mui/icons-material": "^5.15.0",
        "@mui/material": "^5.15.0",
        "auto-launch": "^5.0.6",
        "chokidar": "^3.5.3",
        "date-fns": "^2.30.0",
        "fs-extra": "^11.1.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "recharts": "^2.8.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^5.0.0",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "eslint": "^9.33.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.3.0",
        "vite": "^7.1.2",
        "wait-on": "^7.2.0"
    },
    "build": {
        "directories": {
            "output": "dist-electron"
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "package.json"
        ],
        "productName": "Context Manager Dashboard",
        "win": {
            "target": "nsis"
        },
        "appId": "com.contextmanager.dashboard",
        "nsis": {
            "oneClick": false,
            "createDesktopShortcut": true,
            "shortcutName": "Context Manager Dashboard",
            "createStartMenuShortcut": true,
            "allowToChangeInstallationDirectory": true
        }
    },
    "description": "Dashboard pour Context Manager - Gestion des projets et conversations archiv√©es",
    "author": "DAVE666",
    "version": "1.0.0"
}
